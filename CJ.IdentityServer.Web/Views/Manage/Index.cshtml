@model ManageVM
@{
  ViewData["Title"] = "Profile";
  ViewData.AddActivePage(ManageNavPages.Index);
}

@Html.Partial("_StatusMessage", Model.StatusMessage)

<form method="post" class="ui form">

  <p>User name: @Model.Username (@Model.UserType User)</p>

  <div asp-validation-summary="All" class="text-danger"></div>

  <div class="field">
    <div class="ui left icon input">
      <i class="envelope icon"></i>
      <input asp-for="Email" placeholder="Email" class="form-control" />
    </div>
    <span asp-validation-for="Email" class="text-danger"></span>
  </div>
  <div class="field">
    <div class="ui left icon input">
      <i class="phone icon"></i>
      <input asp-for="PhoneNumber" placeholder="Telephone" class="form-control" />
    </div>
    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
  </div>
  <div class="two fields">
    <div class="field">
      <div class="ui left icon input">
        <i class="address book icon"></i>
        <input asp-for="FirstName" placeholder="First Name" class="form-control" />
      </div>
      <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="field">
      <div class="ui left icon input">
        <i class="address book icon"></i>
        <input asp-for="LastName" placeholder="Last Name" class="form-control" />
      </div>
      <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
  </div>

  <button type="submit" class="ui primary button">Save</button>
</form>

@section Scripts {
  @await Html.PartialAsync("_ValidationScriptsPartial")
}
