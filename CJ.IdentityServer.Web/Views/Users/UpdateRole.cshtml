@model UserRolesVM

@{
  ViewData["Title"] = "Update User Roles";
}

<h2>@ViewData["Title"]</h2>
@Html.Partial("_StatusMessage", Model.StatusMessage)

<div class="row">
  <div class="col-md-6">
    <form method="post" asp-action="UpdateRole">

      <input type="hidden" asp-for="Id" />

      <div class="form-group">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control" disabled />
      </div>
      <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" disabled />
      </div>
      <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" disabled />
      </div>

      <h3>User Roles</h3>

      @{ int i = 0; }
      @foreach (var chk in Model.UserRoles)
      {
      <div class="form-group">
        <input type="checkbox" asp-for="@Model.UserRoles[i].IsChecked" />
        <label asp-for="@Model.UserRoles[i].Id">@Model.UserRoles[i].DisplayName</label>
        <input type="hidden" asp-for="@Model.UserRoles[i].Id" />
        <input type="hidden" asp-for="@Model.UserRoles[i].DisplayName" />
      </div>
        i++;
      }
      <button type="submit" class="btn btn-default">Save</button>
      <a asp-action="Index">Cancel</a>
    </form>
  </div>
</div>
