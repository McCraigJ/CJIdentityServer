<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - CJ.MvcClient</title>

  <environment include="Development">
    <link rel="stylesheet" href="~/dist/main.css" />
    <link rel="stylesheet" href="~/dev/css/src/styles/site.css" />
  </environment>
  <environment exclude="Development">
    <link rel="stylesheet" href="~/dist/main.css" />
  </environment>
</head>
<body>

  <!-- Following Menu -->
  <div class="ui large top fixed hidden transition menu">
    <div class="ui container">
      <a asp-area="" asp-controller="Home" asp-action="Index" class="item">CJ.IdentityServer</a>
    </div>
  </div>

  <div class="pusher">
    <div class="ui inverted vertical masthead center aligned segment">

      <div class="ui container">
        <div class="ui large secondary inverted pointing menu">          
          <a asp-area="" asp-controller="Home" asp-action="Index" class="active item">CJ.IdentityServer</a>          
        </div>
      </div>      

    </div>
    @RenderBody()
  </div>

  <div class="site-footer ui inverted vertical footer segment">
    <div class="ui container">

      <div>CJ.IdentityServer - Copyright @DateTime.Now.Year</div>
      </div>
  </div>

  <script src="~/dist/bundle.js" type="text/javascript"></script>

  @RenderSection("Scripts", required: false)
</body>
</html>
