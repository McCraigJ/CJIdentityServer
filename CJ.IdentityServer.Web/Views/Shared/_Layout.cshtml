<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - CJ.MvcClient</title>

  <environment include="Development">
    <link rel="stylesheet" href="~/dist/main.css" />
    <link rel="stylesheet" href="~/dev/css/src/styles/site.css" />
  </environment>
  <environment exclude="Development">
    <link rel="stylesheet" href="~/dist/main.css" />
  </environment>
</head>
<body>

  <div class="masthead">
    <div class="ui container">
      <div class="ui large inverted menu">
        <a asp-area="" asp-controller="Home" asp-action="Index" class="item">CJ.IdentityServer</a>
      </div>
    </div>

  </div>

  <section class="body-section">
    @RenderBody()
  </section>

  <div class="site-footer ui inverted vertical footer segment">
    <div class="ui container">

      <div>CJ.IdentityServer - Copyright @DateTime.Now.Year</div>
    </div>
  </div>

  <script src="~/dist/bundle.js" type="text/javascript"></script>  

  @RenderSection("Scripts", required: false)
</body>
</html>
