@model RegisterVM
@{
  ViewData["Title"] = "Register";
}

<div class="ui container">
  <div class="ui segment block colour">
    <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" class="ui form">
      <h1>Register</h1>
      <p>Create a new account</p>
      <div asp-validation-summary="All" class="text-danger"></div>
      <div class="field">
        <div class="ui left icon input">
          <i class="envelope icon"></i>
          <input asp-for="Email" placeholder="Email" class="form-control" />
        </div>
        <span asp-validation-for="Email" class="text-danger"></span>
      </div>
      <div class="field">
        <div class="ui left icon input">
          <i class="lock icon"></i>
          <input asp-for="Password" placeholder="Password" class="form-control" />
        </div>
        <span asp-validation-for="Password" class="text-danger"></span>
      </div>
      <div class="field">
        <div class="ui left icon input">
          <i class="lock icon"></i>
          <input asp-for="ConfirmPassword" placeholder="Confirm your password" class="form-control" />
        </div>
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
      </div>
      <div class="field">
        <div class="ui left icon input">
          <i class="phone icon"></i>
          <input asp-for="PhoneNumber" placeholder="Telephone" class="form-control" />
        </div>
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
      </div>
      <div class="two fields">
        <div class="field">
          <div class="ui left icon input">
            <i class="address book icon"></i>
            <input asp-for="FirstName" placeholder="First Name" class="form-control" />
          </div>
          <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="address book icon"></i>
            <input asp-for="LastName" placeholder="Last Name" class="form-control" />
          </div>
          <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
      </div>
      <div class="form-group">
        <button type="submit" class="ui primary button">Register</button>
      </div>
    </form>
  </div>
</div>

@section Scripts {
  @await Html.PartialAsync("_ValidationScriptsPartial")
}
